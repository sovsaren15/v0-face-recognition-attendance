{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "engines": {
          "node": "22.x"
        }
      }
    },
    {
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm install --prefix frontend && pnpm --prefix frontend run build",
        "outputDirectory": "frontend/build",
        "engines": {
          "node": "22.x",
          "pnpm": "8.6.1"
        }
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}