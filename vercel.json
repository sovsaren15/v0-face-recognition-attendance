{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {}
    },
    {
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/((?!api/|favicon.ico|logo192.png|manifest.json).*)",
      "destination": "/index.html"
    },
  ]
}